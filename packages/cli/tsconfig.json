	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": ["node"],
		"outDir": "./dist",
		"resolveJsonModule": true
	},
	"exclude": ["node_modules"]
}
