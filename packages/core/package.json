{
  "name": "@honorer/core",
  "version": "0.1.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./serve": {
      "import": "./dist/serve.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "tsx watch src/serve.ts",
    "build": "tsc",
    "start": "node dist/serve.js",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "hono": "^4.10.2",
    "kysely": "^0.28.8",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "prisma": "^6.18.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
