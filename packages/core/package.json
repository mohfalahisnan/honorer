{
	"name": "@honorer/core",
	"version": "0.1.5-beta.4",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"description": "Module-first toolkit for Hono with decorators, DI, Zod validation, and response helpers.",
	"keywords": [
		"hono",
		"typescript",
		"decorators",
		"dependency-injection",
		"zod",
		"validation",
		"routing",
		"modules",
		"framework"
	],
	"license": "MIT",
	"packageManager": "pnpm@9",
	"engines": {
		"node": ">=18.18",
		"pnpm": ">=9"
	},
	"files": [
		"dist",
		"package.json",
		"README.md"
	],
	"sideEffects": false,
	"publishConfig": {
		"access": "public",
		"tag": "beta"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mohfalahisnan/honorer.git",
		"directory": "packages/core"
	},
	"homepage": "https://github.com/mohfalahisnan/honorer#readme",
	"bugs": {
		"url": "https://github.com/mohfalahisnan/honorer/issues"
	},
	"exports": {
		".": {
			"development": "./src/index.ts",
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"dev": "tsx watch src/serve.ts",
		"build": "tsup",
		"start": "node dist/serve.js",
		"prepublishOnly": "pnpm run build",
		"typecheck": "tsc --noEmit",
		"test": "vitest",
		"lint": "biome check .",
		"lint:fix": "biome lint . --write",
		"format": "biome format . --write"
	},
	"dependencies": {
		"reflect-metadata": "^0.2.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.7",
		"@types/node": "^20.11.17",
		"hono": "^4.10.2",
		"kysely": "^0.28.8",
		"tsup": "^8.5.0",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3",
		"vitest": "^4.0.1",
		"zod": "^4.1.12"
	},
	"peerDependencies": {
		"hono": "^4.10.2",
		"kysely": "^0.28.8",
		"zod": "^4.1.12"
	}
}