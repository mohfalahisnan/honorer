{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"outDir": "./dist",
		"declaration": true,
		"declarationDir": "./dist",
		"typeRoots": ["./node_modules/@types", "./.honorer"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "dist","vitest.config.ts"],
	"include": ["./src/**/*"]
}